def get_icon_url(plant):
    root = 'https://raw.githubusercontent.com/RoDuth/ghini_report_templates/master/mako_misc/kml_map/map_icons/'
    tree1 = 'tree.png'
    tree2 = 'arbol.png'
    palm = 'palm-tree.png'
    pine = 'pine.png'
    cactus = 'cactus.png'
    flower = 'garden.png'
    grass = 'grass.png'
    leaf = 'leaf.png'

    family_to_icon = {
        'Asteraceae': flower,
        'Arecaceae': palm,
        'Cactaceae': cactus,
        'Pinaceae': pine,
        'Araucariaceae': pine,
        'Podocarpaceae': pine,
        'Cupressaceae': pine,
        'Taxaceae': pine,
        'Sciadopityaceae': pine,
        'Poaceae': grass,
    }

    return root + family_to_icon.get(str(plant.accession.species.genus.family), tree1)

